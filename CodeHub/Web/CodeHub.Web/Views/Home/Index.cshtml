@model CodeHub.Data.Models.Paste
@{
    ViewBag.Title = "Home Page";
}
@section styles {
    @Styles.Render("~/Content/codemirror")
}
<div class="jumbotron">
    <h1 class="custom-styled-font">Welcome to CodeHub</h1>
    <p class="lead">
        Freedom of being open-sourced
    </p>
</div>
<div class="container">
    <textarea id="code">@Model.Content</textarea>
</div>
    @section scripts{
        @Scripts.Render("~/Scripts/codemirror")
        <script type="text/javascript">
            $(function () {
                var textEditor = document.getElementById("code");
                var editor = new CodeMirror.fromTextArea(textEditor, {
                    mode: "@Model.Syntax.SyntaxMode",
                    lineNumbers: true,
                    matchBrackets: true,
                    theme: "vibrant-ink",
                    showCursorWhenSelecting: true,
                    undoDepth: 100,
                    lineWrapping: true,
                    readOnly: false,
                    autofocus: false,
                });
                
                console.log(textEditor);

                editor.setSize('100%', '100%');
            });
        </script>
    }
